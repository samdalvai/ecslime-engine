{
    "name": "blob-slash",
    "version": "1.0.0",
    "description": "A JavaScript game engine for the browser. Built around an Entity Component System (ECS) architecture.",
    "scripts": {
        "start": "parcel game.html",
        "start:editor": "IS_EDITOR=true parcel editor.html",
        "clean": "rm -rf .parcel-cache & find dist -maxdepth 1 -type f -exec rm {} +",
        "test": "jest src/__tests__/**/*",
        "test:perf": "jest src/__tests__/Performance.test.ts",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "build": "parcel build index.html"
    },
    "author": "Samuel Dalvai",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@jest/globals": "^29.7.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jest": "^29.5.14",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.45.0",
        "jest": "^29.7.0",
        "parcel": "^2.13.3",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "typescript": "^5.7.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    },
                    "exclude": [
                        "@babel/plugin-transform-classes"
                    ]
                }
            ],
            "@babel/preset-typescript"
        ]
    }
}
